{
    "name": "kynx/laminas-dkim",
    "type": "library",
    "description": "DKIM Signer for Laminas Mail",
    "keywords": ["dkim", "laminas", "mezzio", "mail"],
    "license": "MIT",
    "authors": [
        {
            "name": "Jaap van Turnhout",
            "homepage": "https://github.com/fastnloud"
        }, {
            "name": "Giovanni Iembo",
            "homepage": "https://github.com/joepsyko"
        }, {
            "name": "Milan Divkovic",
            "homepage": "https://github.com/metalinspired"
        }, {
            "name": "Matt Kynx",
            "homepage": "https://github.com/kynx"
        }
    ],
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    },
    "extra": {
        "laminas": {
            "component": "Dkim",
            "config-provider": "Dkim\\ConfigProvider"
        }
    },
    "require": {
        "php": "^7.2",
        "ext-openssl": "*",
        "laminas/laminas-mail": "^2.0"
    },
    "require-dev": {
        "laminas/laminas-coding-standard": "^2.0",
        "laminas/laminas-servicemanager": "^3.4",
        "phpunit/phpunit": "^9.5",
        "phpmailer/dkimvalidator": "^0.3.0",
        "vimeo/psalm": "^4.27"
    },
    "autoload": {
        "psr-4": {
            "Dkim\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "DkimTest\\": "test/"
        },
        "files": [
            "test/Mock/dns_get_record.php"
        ]
    },
    "scripts": {
        "cs-check": "phpcs",
        "cs-fix": "phpcbf"
    }
}
