{
    "name": "kynx/laminas-dkim",
    "type": "library",
    "description": "DKIM Signer for Laminas Mail",
    "keywords": ["dkim", "laminas", "mezzio", "mail"],
    "license": "MIT",
    "authors": [
        {
            "name": "Jaap van Turnhout",
            "homepage": "https://github.com/fastnloud"
        }, {
            "name": "Giovanni Iembo",
            "homepage": "https://github.com/joepsyko"
        }, {
            "name": "Milan Divkovic",
            "homepage": "https://github.com/metalinspired"
        }, {
            "name": "Matt Kynx",
            "homepage": "https://github.com/kynx"
        }
    ],
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        },
        "platform": {
            "php": "7.4.99"
        }
    },
    "extra": {
        "laminas": {
            "component": "Dkim",
            "config-provider": "Dkim\\ConfigProvider"
        }
    },
    "require": {
        "php": "^7.4 || ~8.0.0 || ~8.1.0",
        "ext-openssl": "*",
        "laminas/laminas-mail": "^2.16"
    },
    "require-dev": {
        "laminas/laminas-coding-standard": "^2.4",
        "laminas/laminas-servicemanager": "^3.16",
        "phpunit/phpunit": "^9.5",
        "phpmailer/dkimvalidator": "^0.3.0",
        "vimeo/psalm": "^4.27"
    },
    "autoload": {
        "psr-4": {
            "Kynx\\Laminas\\Dkim\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "KynxTest\\Laminas\\Dkim\\": "test/"
        },
        "files": [
            "test/Mock/dns_get_record.php"
        ]
    },
    "scripts": {
        "check": [
            "@cs-check",
            "@static-analysis",
            "@test"
        ],
        "cs-check": "phpcs",
        "cs-fix": "phpcbf",
        "static-analysis": "psalm --shepherd --stats",
        "test": "phpunit --colors=always",
        "test-coverage": "phpunit --colors=always --coverage-clover clover.xml"
    }
}
